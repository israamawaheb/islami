<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background">
    <ImageView
        android:id="@+id/image_head_sebha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/head_sebha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        />
    <ImageView
        android:id="@+id/sebha_body"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/sebha_body"
        app:layout_constraintTop_toBottomOf="@id/image_head_sebha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-30dp"/>

    <TextView
        android:id="@+id/tv_number_seb7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tasbeh number"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/sebha_body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="33dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/counter_seb7a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_number_seb7a"
        app:layout_constraintStart_toStartOf="@id/tv_number_seb7a"
        app:layout_constraintEnd_toEndOf="@id/tv_number_seb7a"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:background="@drawable/shape_seb7a"

        />

    <TextView
        android:id="@+id/convert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laa ilaha â€˜illa Allaahu wahdahu la shareek lahu, lahul mulku wa lahul hamdu wa huwa ala kulli shayin qadeer"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/shape_sobhan_allah"
        app:layout_constraintTop_toBottomOf="@id/counter_seb7a"
        app:layout_constraintStart_toStartOf="@id/counter_seb7a"
        app:layout_constraintEnd_toEndOf="@id/counter_seb7a"
        android:layout_marginTop="27dp"

       />







</androidx.constraintlayout.widget.ConstraintLayout>